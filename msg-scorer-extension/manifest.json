{
  "manifest_version": 3,
  "name": "MsgScore - メッセージスコアリング",
  "version": "1.0.0",
  "description": "Gmail・LINE OA Managerのメッセージ作成画面でスコアリングを実行",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://manager.line.biz/*",
    "https://msg-scorer.vercel.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["dist/content/gmail.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://manager.line.biz/*"],
      "js": ["dist/content/line-oa.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
